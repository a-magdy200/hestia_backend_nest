# Application Configuration
NODE_ENV=development
PORT=3000
HOST=localhost
APP_NAME=Hestia Backend
APP_VERSION=1.0.0
APP_DESCRIPTION=Hestia Enterprise SaaS Platform - Backend API
LOG_LEVEL=info
ENABLE_SWAGGER=true
ENABLE_METRICS=true
ENABLE_CORS=true
CORS_ORIGIN=*
GLOBAL_PREFIX=api
TIMEOUT=30000
MAX_PAYLOAD_SIZE=10mb

# Database Configuration
DB_TYPE=postgres
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=password
DB_DATABASE=hestia
DATABASE_URL=
DB_SSL=false
DB_MAX_CONNECTIONS=10
DB_CONNECTION_TIMEOUT=60000
DB_ACQUIRE_TIMEOUT=60000
DB_TIMEOUT=60000
DB_POOL_SIZE=10

# Authentication Configuration
AUTH_STRATEGY=jwt
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
SALT_ROUNDS=12
SESSION_SECRET=
SESSION_MAX_AGE=86400000
API_KEY_HEADER=x-api-key

# OAuth Provider Configuration
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_CALLBACK_URL=

# Cache Configuration
CACHE_TYPE=memory
CACHE_TTL=3600
CACHE_MAX_ITEMS=1000

# Redis Configuration (when CACHE_TYPE=redis)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_KEY_PREFIX=hestia:
REDIS_RETRY_DELAY=100
REDIS_MAX_RETRIES=3
REDIS_ENABLE_READY_CHECK=true
REDIS_MAX_MEMORY_POLICY=allkeys-lru
REDIS_LAZY_CONNECT=false
REDIS_KEEP_ALIVE=30000
REDIS_FAMILY=4
REDIS_NO_DELAY=true
REDIS_CONNECTION_NAME=hestia-redis
REDIS_READ_ONLY=false
REDIS_STRING_NUMBERS=false
REDIS_MAX_LOADING_TIMEOUT=10000
REDIS_AUTO_RESUBSCRIBE=true
REDIS_AUTO_RESEND_COMMANDS=true

# Memory Cache Configuration (when CACHE_TYPE=memory)
MEMORY_CACHE_MAX_SIZE=1000
MEMORY_CACHE_TTL=3600000
MEMORY_CACHE_UPDATE_AGE=false
MEMORY_CACHE_ALLOW_STALE=false
MEMORY_CACHE_NO_DISPOSE=false

# Rate Limiting Configuration
RATE_LIMIT_ENABLED=true
RATE_LIMIT_STRATEGY=fixed-window
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100
RATE_LIMIT_SKIP_SUCCESS=false
RATE_LIMIT_SKIP_FAILED=false
RATE_LIMIT_KEY_GENERATOR=
RATE_LIMIT_HANDLER=

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# AWS S3 Configuration
AWS_S3_BUCKET=
AWS_S3_REGION=
AWS_S3_ENDPOINT=
AWS_S3_FORCE_PATH_STYLE=false
AWS_S3_SIGNATURE_VERSION=v4
AWS_S3_MAX_FILE_SIZE=10485760
AWS_S3_ALLOWED_MIME_TYPES=image/jpeg,image/png,image/gif,application/pdf
AWS_S3_PUBLIC_URL=

# AWS SES Configuration
AWS_SES_REGION=
AWS_SES_FROM_EMAIL=
AWS_SES_REPLY_TO_EMAIL=
AWS_SES_MAX_SEND_RATE=14
AWS_SES_CONFIGURATION_SET=

# AWS SNS Configuration
AWS_SNS_REGION=
AWS_SNS_TOPIC_ARN=
AWS_SNS_PLATFORM_APPLICATION_ARN=

# Email Configuration
EMAIL_PROVIDER=aws-ses
